%table{:width => "100%", :border => '1'}
  %thead
    %tr
      %th{:width => "50%"} Create a webpage monitor
      %th{:width => "50%"} Create Http Service Monitor
  %tbody
    %tr
      %td
        = form_for @monitor_webpage, :as => :monitor, :url => monitors_path(@monitor_webpage) do |f|
          %input{:type => 'hidden', :name => 'type', :value => 'webpage'}
          = f.label :name, "Name:"
          = f.text_field :name
          %br

          = f.label :url, "URL:"
          = f.text_field :url
          %br

          = f.label :frequency, "Frequency:"
          = f.text_field :frequency
          %br

          = f.radio_button :browser, 'firefox'
          = f.label :browser, "Firefox"
          = f.radio_button :browser, 'ie'
          = f.label :browser, "Internet Explorer"
          %br

          %input{:type => 'checkbox', :name => "monitor[locations][]", :value => "aws-us-east"}
          %label USA East
          %input{:type => 'checkbox', :name => "monitor[locations][]", :value => "aws-us-west"}
          %label USA West
          %br

          = f.label :bandwidth, "Bandwidth:"
          = f.text_field :bandwidth
          %br

          = f.submit


      %td
        = form_for @monitor_http, :as => :monitor, :url => monitors_path(@monitor_http) do |f|
          %input{:type => 'hidden', :name => 'type', :value => 'http'}
          = f.label :name, "Name:"
          = f.text_field :name
          %br

          = f.label :url, "URL:"
          = f.text_field :url
          %br

          = f.label :frequency, "Frequency:"
          = f.text_field :frequency
          %br

          %input{:type => 'checkbox', :name => "monitor[locations][]", :value => "aws-us-east"}
          %label USA East
          %input{:type => 'checkbox', :name => "monitor[locations][]", :value => "aws-us-west"}
          %label USA West
          %br

          = f.label :bandwidth, "Bandwidth:"
          = f.text_field :bandwidth
          %br

          = f.submit