= form_for @monitor, :as => :monitor, :url => monitors_path do |f|
  = f.label :name, "Name:"
  = f.text_field :name
  %br
  
  = f.label :url, "URL:"
  = f.text_field :url
  %br

  = f.label :frequency, "Frequency:"
  = f.text_field :frequency
  %br
  
  = f.radio_button :browser, 'firefox'
  = f.label :browser, "Firefox"
  %br
  
  %input{:type => 'checkbox', :name => "monitor[locations][]", :value => "aws-us-east"}
  %label USA East
  %input{:type => 'checkbox', :name => "monitor[locations][]", :value => "aws-us-west"}
  %label USA West
  %br
  
  = f.label :bandwidth, "Bandwidth:"
  = f.text_field :bandwidth
  %br
  
  = f.submit
  
  